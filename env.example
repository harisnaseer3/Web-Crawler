# Web Crawler Search Engine Configuration

# Database
DATABASE_URL=sqlite:///./crawler.db
DATABASE_PATH=crawler.db

# Crawler Settings
MAX_THREADS=50
MAX_IPS_PER_RUN=10000
BATCH_SIZE=100
REQUEST_TIMEOUT=5
POLITENESS_DELAY=1.0
MAX_RETRIES=3

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Web Crawler Search Engine
API_VERSION=1.0.0

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=crawler.log

# Search Settings
MAX_SEARCH_RESULTS=100
DEFAULT_SEARCH_LIMIT=10

# TF-IDF Settings
MAX_KEYWORDS_PER_PAGE=20
MIN_KEYWORD_LENGTH=3
